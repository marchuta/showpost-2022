<div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          
            

             
            
             
            
           <%#=image_tag post.image.variant(resize: '500x500'), class: 'post-image' if post.image.attached? %>
            <div class= "post-title">
              <%= @post.title%>  
              </div>

            <%=image_tag @post.image.variant(resize: '500x500'), class: 'post-image' if @post.image.attached? %>

            <div class="card-body">
            

              <p class="card-text"> <%= @post.sentence%> </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">


                <% if user_signed_in? %>
                <% if current_user.id == @post.user_id   %>
                
                  <button type="button" class="btn btn-sm btn-outline-secondary"> 
                  <%= link_to "delete", post_path(@post.id), method: :delete, class:"post-destroy" %>
                  </button>

                  <button type="button" class="btn btn-sm btn-outline-secondary"> 
                  <%= link_to  "edit", edit_post_path(@post.id), class:"edit-post-link"  %>
                  </button>

                  <%end%>

                  <%end%>

                </div>
                <small class="text-muted"><%= @post.created_at %> </small>
              </div>
            </div>
            </div>
        </div>      

        <div class= 'top-page-direction'>
  <li><%= link_to "トップページへ", posts_path, class: "top-page-direction-link" %></li> 
</div>

     